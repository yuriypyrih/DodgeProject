{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": ["node_modules/*"],
      "utils/*": ["utils/*"],
      "Models/*": ["Models/*"],
      "game/*": ["game/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}